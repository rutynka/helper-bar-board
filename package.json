{
  "name": "@rutynka/helper-bar-board",
  "author": "ru7ynk4",
  "version": "0.1.0",
  "description": "A simple sticky bar with timer & counter made with Svelte. The easiest way to display text on the bar is through js public method",
  "svelte": "src/index.js",
  "module": "dist/bb.mjs",
  "main": "dist/index.js",
  "unpkg": "dist/bb.js",
  "type": "module",
  "files": [
    "src/index.js",
    "src/Bar.svelte",
    "src/Board.svelte",
    "src/Timer.svelte"
  ],
  "keywords": [
    "svelte",
    "bar",
    "sticky",
    "quiz",
    "helper",
    "rutynka"
  ],
  "scripts": {
    "build": "rollup -c",
    "dev": "rollup -c -w",
    "start": "sirv public",
    "test": "jest"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^17.0.0",
    "@rollup/plugin-node-resolve": "^11.0.0",
    "rollup": "^2.3.4",
    "rollup-plugin-css-only": "^3.1.0",
    "rollup-plugin-livereload": "^2.0.0",
    "rollup-plugin-svelte": "^7.0.0",
    "rollup-plugin-terser": "^7.0.0",
    "svelte": "^3.0.0",
    "@testing-library/jest-dom": "^5.16.2",
    "@testing-library/svelte": "^3.0.3",
    "babel-jest": "^27.5.0",
    "jest": "^27.5.0",
    "jest-transform-stub": "^2.0.0",
    "svelte-jester": "^2.3.1",
    "@babel/core": "^7.8.0",
    "@babel/preset-env": "^7.16.11"
  },
  "dependencies": {
    "sirv-cli": "^1.0.0"
  },
  "jest": {
    "transform": {
      "^.+\\.svelte$": "svelte-jester",
      "^.+\\.js$": "babel-jest",
      ".+\\.(css|styl|less|sass|scss|png|jpg|ttf|woff|woff2)$": "jest-transform-stub"
    },
    "moduleFileExtensions": ["svelte", "js"],
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": ["@testing-library/jest-dom/extend-expect"]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/rutynka/helper-bar-board"
  },
  "homepage": "https://github.com/rutynka/helper-bar-board",
  "url": "https://rutynka.io",
  "license": "MIT"
}
